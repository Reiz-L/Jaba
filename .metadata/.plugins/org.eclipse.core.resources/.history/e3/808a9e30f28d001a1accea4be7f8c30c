package jaba;

import java.io.FileReader;
import java.io.FileWriter;

public class CompilerAndRun {
	
	public static void _run(String path) {
		try {
			FileReader fr = new FileReader(path);
			int ch = 0;
			 while((ch=fr.read())!=-1){
				 //fr.read()读取一个字节，判断此字节的值为-1表示读到文件末尾了。
				 //System.out.print((char)ch);
				 char char1 = (char)ch;
				 String commString = String.valueOf(char1);
				 System.out.print("\n"+commString);
				 String[] fgString = commString.split("\r\n");
				 for (int i = 0; i < fgString.length; i++) {
					main.runcomm(fgString[i]);
					System.out.println("\n");
					System.out.print(fgString[i]);
				}
			}
		} catch (Exception e) {
			// TODO: handle exception
			e.printStackTrace();
		}
	}
}
